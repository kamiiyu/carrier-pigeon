<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
              <%= render 'event_filter' %>
            </div>
            <div class="panel-body">
                <br>
                <div class="row">
                    <div class="col-lg-12">
                        <table width="100%" class="table table-striped table-hover" id="dataTables">
                            <thead>
                                <tr>
                                    <th class="text-muted">Events</th>
                                    <%= content_tag :th, 'Type', class: params[:event_type].present? ? 'text-info' : 'text-muted'%>
                                    <%= content_tag :th, 'Start Date', class: (params[:filter][:started_at].present? rescue false) ? 'text-info' : 'text-muted'%>
                                    <th class="text-muted">End Date</th>
                                    <%= content_tag :th, 'Update Date', class: (params[:filter][:updated_at].present? rescue false) ? 'text-info' : 'text-muted'%>
                                    <th class="text-muted">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%= render partial: 'event', collection: @events, cached: true  %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="panel-footer pull-right">
                    <%= paginate @events %>
            </div>
        </div>
    </div>
</div>
