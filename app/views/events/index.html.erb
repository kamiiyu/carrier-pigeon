<div class='container-fluid'>
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">
              <div class="col-sm-10">
                <%= select_tag 'test', options_for_select([["training", "training"], ["outing", "outing"]]), prompt: 'all event types', class: 'selectpicker', 'data-style' => 'btn-success btn-outline btn-lg' %>
                <%= link_to 'Latest', '#', class: 'btn btn-primary btn-outline btn-lg' %>
                <%= link_to 'Upcoming', '#', class: 'btn btn-primary btn-outline btn-lg' %>
              </div>
              <div class="col-sm-1 col-sm-offset-1">
                  <%= link_to 'Create', new_event_path, class: 'btn btn-info btn-outline btn-lg' %>
              </div>
            </h2>
        </div>
    </div>
    <div class="row"><br></div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Events
                </div>
                <div class="panel-body">
                    <br>
                    <div class="row">
                        <div class="col-lg-12">
                            <table width="100%" class="table table-striped table-hover" id="dataTables">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Event Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%= render partial: 'event', collection: @events  %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-8">
                            <%= paginate @events %>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
